{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "out/**",
        "dist/**",
        "!.next/server/**",
        "!.next/static/**"
      ],
      "env": [
        "NEXT_PUBLIC_*",
        "NODE_ENV",
        "EDUTECH_*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_*",
        "PORT",
        "NODE_ENV",
        "EDUTECH_*"
      ]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.js", "src/**/*.jsx", "test/**/*", "spec/**/*"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "EDUTECH_REGISTRY_URL",
    "EDUTECH_INSTITUTION_ID"
  ]
}